{
  "manifest_version": 3,
  "name": "noro",
  "version": "0.1.0",
  "description": "one-time secret sharing with end-to-end encryption",
  "permissions": ["contextMenus", "storage", "clipboardWrite", "notifications"],
  "host_permissions": ["https://noro.sh/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "noro@noro.sh",
      "strict_min_version": "109.0"
    }
  }
}
